<div class="field mt-ls">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Увійти", new_session_path(resource_name), class: 'button button-yellow' %><br />
  <% end %>
</div>

<div class="field mt">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Зареєструватися", new_registration_path(resource_name), class: 'button button-yellow' %><br />
  <% end %>
</div>

<div class="field mt">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Забули пароль?", new_password_path(resource_name), class: 'button button-yellow' %><br />
  <% end %>
</div>

<div class="field mt">
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Не отримав(-ла) інструкцій щодо підтвердження?", new_confirmation_path(resource_name), class: 'button button-yellow' %><br />
  <% end %>
</div>

<div class="field mt">
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Не отримав(-ла) інструкції з розблокування?", new_unlock_path(resource_name), class: 'button button-yellow' %><br />
  <% end %>
</div>

<div class="field mt">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Увійти за допомогою #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'button button-main' %><br />
    <% end %>
  <% end %>
</div>
