<div class="container">
  <h2 class="title-lg mb">Авторизуватися</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="field mt">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text-field' %>
    </div>

    <div class="field mt">
      <%= f.label :password, 'Уведіть пароль' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-text-field' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Запам\'ятати мене' %>
      </div>
    <% end %>

    <div class="actions mt">
      <%= f.submit "Увійти", class: 'button button-main' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
