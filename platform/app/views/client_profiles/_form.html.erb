<%= form_with(model: client_profile, local: true) do |form| %>
  <% if client_profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client_profile.errors.count, "error") %> prohibited this client_profile from being saved:</h2>

      <ul>
        <% client_profile.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mt">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, autofocus: true, class: 'form-text-field' %>
  </div>

  <div class="field mt">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class: 'form-text-field' %>
  </div>

  <div class="field mt">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class: 'form-text-field' %>
  </div>

  <%= form.fields_for :client, client_profile.client do |user_fields| %>
    <div class="field mt">
      <%= user_fields.label :email, style: "display: block" %>
      <%= user_fields.text_field :email, class: 'form-text-field' %> 
    </div>

  <div class="field mt">
    <%= user_fields.label :password %> <i>(leave blank if you don't<br>want to change it)</i><br />
    <%= user_fields.password_field :password, autocomplete: "new-password", class: 'form-text-field'   %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <% end %>

  <div class="field mt">
    <%= form.submit "Save", class: 'button button-main' %>
  </div>

<% end %>
