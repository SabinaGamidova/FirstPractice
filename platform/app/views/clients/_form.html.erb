<%= form_with model: client do |form| %>

  <p><%= form.label :surname, 'Уведіть прізвище' %></p>
  <p><%= form.text_field :surname, class: 'form-text-field' %></p>

  <p  class="mt"><%= form.label :name, 'Уведіть ім\'я' %></p>
  <p><%= form.text_field :name, class: 'form-text-field' %></p>

  <p  class="mt"><%= form.label :patronymic, 'Уведіть по-батькові' %></p>
  <p><%= form.text_field :patronymic, class: 'form-text-field' %></p>

  <p class="mt"><%= form.label :address, 'Уведіть адресу' %></p>
  <p><%= form.text_field :address, class: 'form-text-field' %></p>

  <p class="mt"><%= form.label :phone, 'Уведіть телефон'  %></p>
  <p><%= form.text_field :phone, class: 'form-text-field' %></p>

  <% end %> 
