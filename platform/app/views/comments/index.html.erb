<div class="container">
  <p class="title-md mb"style="color: green"><%= notice %></p>

  <h1 class="title-lg mb">All comments</h1>

  <div id="comments">
    <% @comments.each do |comment| %>
    <div class="mt-ls container">
       <%= render comment %>
    </div>
  <% end %>

  <div class="container mt-ls">
    <%= link_to "New comment", new_comment_path, class: 'button button-main' %>
  </div>
</div>
